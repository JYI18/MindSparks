<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/mind_spark"
        android:label="@string/app_name"
        android:roundIcon="@drawable/mind_spark"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizKids"
        tools:targetApi="31">

        <activity
            android:name=".Activities.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <activity
            android:name=".Activities.SignUp"
            android:exported="false" />

        <activity
            android:name=".Activities.Login"
            android:exported="false"/>

        <activity
            android:name=".Activities.ScienceCategoryActivity"
            android:exported="false"/>

        <activity
            android:name=".Activities.MathsCategoryActivity"
            android:exported="false"/>

        <activity
            android:name=".Activities.RewardsActivity"
            android:exported="false"/>

        <activity
            android:name=".Activities.ViewScoreActivity"
            android:exported="false"/>

        <activity
            android:name=".Activities.Settings"
            android:exported="false"/>

        <activity
            android:name=".Activities.MathsAdditionLevelActivity"
            android:exported="false"/>

        <activity
            android:name=".Activities.MathsQuizActivity"
            android:exported="false"/>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />


</manifest>